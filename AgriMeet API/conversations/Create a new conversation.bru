meta {
  name: Create a new conversation
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/conversations
  body: json
  auth: bearer
}

headers {
  Content-Type: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

body:json {
  {
    "message": "Hi, I have a question about this product",
    "order_id": 123,
    "product_id": 456,
    "seller_id": 10
  }
}

settings {
  encodeUrl: true
}

docs {
  Creates a new conversation thread for an order or product inquiry. Provide either order_id or product_id.
}

example {
  name: Conversation created successfully
  
  request: {
    url: {{baseUrl}}/conversations
    method: POST
    mode: json
    headers: {
      Content-Type: application/json
      Authorization: Bearer <token>
    }
  
    body:json: {
      {
        "message": "Hi, I have a question about this product",
        "order_id": 123,
        "product_id": 456,
        "seller_id": 10
      }
    }
  }
  
  response: {
    status: {
      code: Created
      text: 201
    }
  
    body: {
      type: text
      content: '''
  
      '''
    }
  }
}

example {
  name: Conversation already exists or invalid data
  
  request: {
    url: {{baseUrl}}/conversations
    method: POST
