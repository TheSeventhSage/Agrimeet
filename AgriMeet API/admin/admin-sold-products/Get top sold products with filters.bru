}

example {
  name: Unauthenticated
  
  request: {
    url: {{baseUrl}}/admin/admin-sold-products?day_of_week=1&month=1&year=2025&last_days=30
    method: GET
    mode: none
    params:query: {
      day_of_week: 1
      month: 1
      year: 2025
      last_days: 30
    }
  
    headers: {
      Accept: application/json
      Authorization: Bearer <token>
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Unauthorized
      text: 401
    }
  
    body: {
      type: json
      content: '''
        {
          "error": "Unauthenticated."
        }
      '''
    }
  }
}

