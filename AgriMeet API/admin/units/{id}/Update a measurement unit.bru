meta {
  name: Update a measurement unit
  type: http
  seq: 1
}

put {
  url: {{baseUrl}}/admin/units/:id
  body: json
  auth: bearer
}

params:path {
  id: 3463
}

headers {
  Content-Type: application/json
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

body:json {
  {
    "name": "Updated Kilogram",
    "symbol": "kg"
  }
}

settings {
  encodeUrl: true
}

docs {
  Update an existing measurement unit. Requires authentication.
}

example {
  name: Unit updated successfully
  
  request: {
    url: {{baseUrl}}/admin/units/:id
    method: PUT
    mode: json
    params:path: {
      id: 3463
    }
  
    headers: {
      Content-Type: application/json
      Accept: application/json
      Authorization: Bearer <token>
    }
  
    body:json: {
      {
        "name": "Updated Kilogram",
        "symbol": "kg"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: OK
      text: 200
    }
  
    body: {
      type: json
      content: '''
        {
          "data": {
            "id": 1,
            "name": "Kilogram",
            "symbol": "kg",
            "created_at": "2024-01-15T10:30:00.000000Z",
            "updated_at": "2024-01-15T10:30:00.000000Z"
          }
        }
      '''
    }
  }
}

