example {
  name: Cannot delete category with subcategories or associated products
  
  request: {
    url: {{baseUrl}}/admin/categories/:category
    method: DELETE
    mode: none
    params:path: {
      category: 3463
    }
  
    headers: {
      Accept: application/json
      Authorization: Bearer <token>
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Conflict
      text: 409
    }
  
    body: {
      type: json
      content: '''
        {
          "message": "Cannot delete category that has subcategories or products."
