example {
  name: Unauthenticated
  
  request: {
    url: {{baseUrl}}/admin/categories/:category
    method: DELETE
    mode: none
    params:path: {
      category: 3463
    }
  
    headers: {
      Accept: application/json
      Authorization: Bearer <token>
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
