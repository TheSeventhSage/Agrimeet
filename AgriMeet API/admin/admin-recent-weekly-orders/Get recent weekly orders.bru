meta {
  name: Get recent weekly orders
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/admin/admin-recent-weekly-orders
  body: none
  auth: bearer
}

headers {
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

settings {
  encodeUrl: true
}

docs {
  Retrieve the 5 most recent orders from the current week with user and product details. Requires admin authentication.
}

