example {
  name: Payment verification failed
  
  request: {
    url: {{baseUrl}}/payments/callback?reference=TXN-2025-123456
    method: GET
    mode: none
    params:query: {
      reference: TXN-2025-123456
    }
  
    headers: {
      Accept: application/json
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Bad Request
      text: 400
    }
  
    body: {
      type: json
      content: '''
        {
          "message": "Payment failed: Transaction not successful"
        }
      '''
    }
  }
}

