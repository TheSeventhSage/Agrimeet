meta {
  name: Handle payment callback from Paystack (Phase 3: Payment Verification)
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/payments/callback?reference=TXN-2025-123456
  body: none
  auth: inherit
}

params:query {
  reference: TXN-2025-123456
}

headers {
  Accept: application/json
}

settings {
  encodeUrl: true
}

docs {
  Handles payment callback/webhook from Paystack after user completes payment. Verifies the payment transaction with Paystack and updates order status accordingly. This endpoint is called by Paystack after payment completion.
}

