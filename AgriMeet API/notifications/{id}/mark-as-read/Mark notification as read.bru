meta {
  name: Mark notification as read
  type: http
  seq: 1
}

put {
  url: {{baseUrl}}/notifications/:id/mark-as-read
  body: none
  auth: bearer
}

params:path {
  id: 9a7e1234-5678-90ab-cdef-1234567890ab
}

headers {
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

settings {
  encodeUrl: true
}

docs {
  Mark a specific notification as read for the authenticated user
}

example {
  name: Notification marked as read successfully
  
  request: {
    url: {{baseUrl}}/notifications/:id/mark-as-read
    method: PUT
    mode: none
    params:path: {
      id: 9a7e1234-5678-90ab-cdef-1234567890ab
    }
  
    headers: {
      Accept: application/json
      Authorization: Bearer <token>
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: OK
      text: 200
    }
  
    body: {
      type: json
      content: '''
        {
          "success": true,
          "message": "Notification marked as read"
        }
      '''
    }
  }
}

example {
  name: Unauthenticated
  
  request: {
    url: {{baseUrl}}/notifications/:id/mark-as-read
    method: PUT
    mode: none
    params:path: {
      id: 9a7e1234-5678-90ab-cdef-1234567890ab
    }
  
    headers: {
      Accept: application/json
      Authorization: Bearer <token>
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Unauthorized
      text: 401
    }
  
    body: {
      type: json
      content: '''
        {
          "message": "Unauthenticated."
        }
      '''
    }
  }
}

example {
  name: Notification not found
  
  request: {
    url: {{baseUrl}}/notifications/:id/mark-as-read
    method: PUT
    mode: none
    params:path: {
      id: 9a7e1234-5678-90ab-cdef-1234567890ab
    }
  
    headers: {
      Accept: application/json
      Authorization: Bearer <token>
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Not Found
      text: 404
    }
  
    body: {
      type: json
      content: '''
        {
          "success": false,
          "message": "Notification not found"
        }
      '''
    }
  }
}
