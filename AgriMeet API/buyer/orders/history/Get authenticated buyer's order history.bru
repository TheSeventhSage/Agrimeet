meta {
  name: Get authenticated buyer's order history
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/buyer/orders/history?page=1&per_page=10
  body: none
  auth: inherit
}

params:query {
  page: 1
  per_page: 10
}

headers {
  Accept: application/json
}

settings {
  encodeUrl: true
}

docs {
  Returns a paginated list of orders for the currently authenticated buyer.
}

