example {
  name: No reviews found for the specified criteria
  
  request: {
    url: {{baseUrl}}/buyer/allreviews?product_id=101&page=1
    method: GET
    mode: none
    params:query: {
      product_id: 101
      page: 1
    }
  
    headers: {
      Accept: application/json
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Not Found
      text: 404
    }
  
    body: {
      type: json
      content: '''
        {
          "message": "No reviews found for the specified criteria"
        }
      '''
    }
  }
}

example {
  name: Validation error - product_id is required
  
  request: {
    url: {{baseUrl}}/buyer/allreviews?product_id=101&page=1
    method: GET
    mode: none
    params:query: {
      product_id: 101
      page: 1
    }
  
    headers: {
      Accept: application/json
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Unprocessable Entity (WebDAV) (RFC 4918)
      text: 422
    }
  
    body: {
      type: json
      content: '''
        {
          "message": "The product id field is required.",
          "errors": {
            "product_id": [
              "The product id field is required.",
              "The product id field is required."
            ]
          }
        }
      '''
    }
  }
}
