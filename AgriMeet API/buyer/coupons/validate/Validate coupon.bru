meta {
  name: Validate coupon
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/buyer/coupons/validate
  body: json
  auth: bearer
}

headers {
  Content-Type: application/json
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

body:json {
  {
    "code": "SUMMER2024"
  }
}

settings {
  encodeUrl: true
}

docs {
  Validate a coupon code during checkout. Checks if the coupon is active, not expired, and within usage limits.
}

example {
  name: Coupon is valid
  
  request: {
    url: {{baseUrl}}/buyer/coupons/validate
    method: POST
    mode: json
    headers: {
      Content-Type: application/json
      Accept: application/json
      Authorization: Bearer <token>
    }
  
    body:json: {
      {
        "code": "SUMMER2024"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: OK
      text: 200
    }
  
    body: {
      type: json
      content: '''
        {
          "data": {
            "id": 1,
            "code": "SUMMER2024",
            "type": "percentage",
            "value": 20,
            "valid_from": "2024-06-01",
            "valid_to": "2024-08-31",
            "usage_limit": 100,
            "used_count": 45,
            "is_active": true
          }
        }
      '''
    }
  }
}

example {
  name: Unauthenticated
  
  request: {
    url: {{baseUrl}}/buyer/coupons/validate
    method: POST
    mode: json
    headers: {
      Content-Type: application/json
      Accept: application/json
      Authorization: Bearer <token>
    }
  
    body:json: {
      {
        "code": "SUMMER2024"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Unauthorized
      text: 401
    }
  
    body: {
      type: json
      content: '''
        {
          "error": "Unauthenticated."
        }
      '''
    }
  }
}

example {
  name: Invalid or expired coupon
  
  request: {
    url: {{baseUrl}}/buyer/coupons/validate
    method: POST
    mode: json
    headers: {
      Content-Type: application/json
      Accept: application/json
      Authorization: Bearer <token>
    }
  
    body:json: {
      {
        "code": "SUMMER2024"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Unprocessable Entity (WebDAV) (RFC 4918)
      text: 422
    }
  
    body: {
      type: json
      content: '''
        {
          "message": "Invalid or expired coupon"
        }
      '''
    }
  }
}
