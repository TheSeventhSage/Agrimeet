meta {
  name: Get seller-specific notifications
  type: http
  seq: 6
}

get {
  url: {{baseUrl}}/seller/notifications?per_page=15&page=1
  body: none
  auth: bearer
}

params:query {
  per_page: 15
  page: 1
}

headers {
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

settings {
  encodeUrl: true
}

docs {
  Retrieve paginated seller-specific notifications including orders, payments, stock, reviews, wallet, and KYC notifications
}

