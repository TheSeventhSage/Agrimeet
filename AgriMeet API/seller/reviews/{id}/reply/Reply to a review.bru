example {
  name: Unauthenticated
  
  request: {
    url: {{baseUrl}}/seller/reviews/:id/reply
    method: POST
    mode: json
    params:path: {
      id: 3463
    }
  
    headers: {
      Content-Type: application/json
      Accept: application/json
      Authorization: Bearer <token>
    }
  
    body:json: {
      {
        "review_reply": "Thank you for your feedback! We're glad you enjoyed our product.",
        "review_status": "approved"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Unauthorized
      text: 401
    }
  
    body: {
      type: json
      content: '''
        {
          "error": "Unauthenticated."
        }
      '''
    }
  }
}

