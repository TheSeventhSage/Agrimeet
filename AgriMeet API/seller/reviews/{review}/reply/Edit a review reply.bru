meta {
  name: Edit a review reply
  type: http
  seq: 1
}

put {
  url: {{baseUrl}}/seller/reviews/:review/reply
  body: json
  auth: bearer
}

params:path {
  review: 3463
}

headers {
  Content-Type: application/json
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

body:json {
  {
    "review_reply": "Updated reply text"
  }
}

settings {
  encodeUrl: true
}

docs {
  Allows the seller to edit their existing reply to a review.
}

