example {
  name: Unauthenticated
  
  request: {
    url: {{baseUrl}}/seller/reviews/:review/reply
    method: PUT
    mode: json
    params:path: {
      review: 3463
    }
  
    headers: {
      Content-Type: application/json
      Accept: application/json
      Authorization: Bearer <token>
    }
  
    body:json: {
      {
        "review_reply": "Updated reply text"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: Unauthorized
      text: 401
    }
  
    body: {
      type: json
      content: '''
        {
          "error": "Unauthenticated."
        }
      '''
    }
  }
}

